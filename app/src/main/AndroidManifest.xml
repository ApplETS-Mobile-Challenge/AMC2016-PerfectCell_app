<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amc.applets.perfectcell">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.MainDonneur"
            android:label="@string/title_activity_main_donneur"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.activity.ClubDescriptionActivity"
            android:parentActivityName=".view.activity.MainDonneur"></activity>
        <activity
            android:name=".view.activity.MainReceveur"
            android:label="@string/title_activity_main_receveur"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>
