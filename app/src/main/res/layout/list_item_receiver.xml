<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo_applets" />

            <TextView
                android:id="@+id/receivernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/logoImageView"
                android:text="Applets"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/receiverDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/receivernameTextView"
                android:ellipsize="end"
                android:lines="2"
                android:scrollHorizontally="true"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas dapibus maximus sapien, nec feugiat tellus aliquam ac. Curabitur pharetra odio non mi gravida porta. Aenean ante massa, pulvinar sit amet sagittis tincidunt, tempor tincidunt ante. " />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>