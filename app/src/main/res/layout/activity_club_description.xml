<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.amc.applets.perfectcell.ClubDescriptionFragment">

    <TextView
        android:id="@+id/club_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/club_description"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/club_ressource_needed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/club_need"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/club_snackbar"
            android:layout_alignParentBottom="true">
        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>

</LinearLayout>
